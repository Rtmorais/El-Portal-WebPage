{% extends "layout.njk" %}

{% block content %}

        <div id="produc-tittle">
            <h1>Nuestros Productos</h1>
        </div>

         <section class="cards">
            {% for item in items %}
            <div class="card">
                <div class="card_image-container">
                  <img src="{{ item.img }}" alt="{{item.tittle}}">  
                </div>
                <div class="card_info">
                    <h1>{{item.tittle}}</h1>
                    <h2>{{item.description}}</h2>
                </div>
            </div>
            {% endfor %}
          </section>
    
   
{% endblock %}